/**app.wxss**/
page {
  background-color: #f8f8f8;
  font-family: "SourceHanSansCN-Regular";
  font-size: 24rpx;
  color: #333;
  box-sizing: border-box;
}
.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
image {
  display: block;
  width: auto;
  height: auto;
}
.clearfix, .layout { zoom: 1; }
.clearfix:after, .layout:after {
  visibility: hidden;
  display: block;
  content: "."; 
  font-size: 0; 
  height: 0; 
  clear: both; 
}
.fl {
  float: left
}
.fr {
  float: right;
}
.tr {
  text-align: right;
}
.input-placeholder, .textarea-placeholder {
  color: #a2a2a2;
}