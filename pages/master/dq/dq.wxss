.container {
  padding: 35rpx 45rpx;
}
/* 公共样式 */
.list-item {
  box-sizing: border-box;
  margin-top: 12rpx;
  /* padding: 20rpx 0; */
  width: 100%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 职责 */
.responsibility .title {
  padding-bottom: 36rpx;
  width: 630rpx;
}
.list-item .pro {
  flex:  0 0 auto;
  padding: 0 20rpx;
  line-height: 40rpx;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
}
/* 加减操作handdle */
.list-item .handle {
   height: 100%;
}
.handle view {
  display: inline-block;
  vertical-align: top;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  border: 1rpx solid #ebebeb;
}
.handle .border {
  width: 60rpx;
  font-size: 32rpx;
  color: #a2a2a2;
}

.handle .count {
  padding: 0 10rpx;
  width: 96rpx;
  border-color: #fff;
}
.handle .count.sum {
  width: 156rpx;
  /* font-size: 20rpx; */
}
picker view {
  text-align: right;
}
/* 如果是清洁工，日期要变化 */
.handle.qjg {
  flex: 1;
  padding: 0 20rpx;
}
.handle.qjg view {
  width: 100%;
  border: none;
  text-align: right;
}

/* 如果为维修工，则是在线咨询 */
.list-item .consulting {
  /* padding: 0 34rpx; */
  /* line-height: 60rpx; */
  /* color: #fff; */
  /* background-color: #ffd200; */
}
.list-item .consulting button {
  padding: 0 34rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #ffd200;
  border-radius: 2rpx;
}
.list-item .consulting button::after {
  border: none;
}
/* 小字提示 */
.tips {
  margin-top: 10rpx;
  width: 100%;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #a2a2a2;
}
/* 说明 */
.notice {
  margin-top: 10rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.notice .info {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  color: #fff;
  background-color: #ffd200;
  
}
.notice .desc {
  flex: 1;
  padding: 0 20rpx;
  background-color: #fff;
}
/* 选择省市县与输入详细地址 */
.address {
  width: 100%;
}
.add-item {
  margin-top: 12rpx;
  min-height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.add-item .item {
  padding: 0 20rpx;
}
.add-item .input {
  flex: 1;
  padding: 0 20rpx;
}
.add-item .input textarea {
  width: 100%;
  border: 0;
  resize: none;
  min-height: 60rpx;
  line-height: 60rpx;
  text-align: right;
}
.input .picker text.tips {
  color: #a2a2a2;
}
.selCoupons .input {
  text-align: right;
}
.add-item .right {
  margin-right: 20rpx;
  width: 16rpx;
  display: flex;
  align-items: center;
}
.add-item .right image {
  width: 100%;
}
/* 确认下单 */
.sub {
  width: 100%;
}
.sub button {
  margin-top: 100rpx;
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  color: #fff;
  background-color: #ffd200;
  border-radius: 92rpx;
}
.sub button::after {
  border: none;
}
.sub .tips {
  line-height: 40rpx;
  text-align: center;
  color: #515151;
}