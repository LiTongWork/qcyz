/* pages/decorateKeeper/decorateKeeper.wxss */
.container {
  padding: 35rpx 45rpx;
}
/* 职责 */
.responsibility .title {
  padding-bottom: 36rpx;
  width: 630rpx;
}
/* 小字提示 */
.tips {
  margin-top: 10rpx;
  width: 100%;
  line-height: 30rpx;
  font-size: 22rpx;
  color: #a2a2a2;
}
.list-item {
  margin-top: 10rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.list-item .pro {
  flex: 1;
  padding: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 操作handdle */
.list-item .handle {
   height: 100%;
}
.handle view {
  display: inline-block;
  vertical-align: top;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  border: 1rpx solid #ebebeb;
}
.handle .border {
  width: 60rpx;
  font-size: 32rpx;
  color: #a2a2a2;
}

.handle .count {
  padding: 0 10rpx;
  width: 96rpx;
  border-color: #fff;
}
.handle .count.sum {
  width: 156rpx;
  /* font-size: 20rpx; */
}
/* 说明 */
.notice {
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.notice .info {
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  background-color: #ffd200;
}
.notice .text {
  flex: 1;
  line-height: 30rpx;
  padding: 0 20rpx;
  background-color: #fff;
}
/* 确认下单 */
.sub {
  width: 100%;
}
.sub button {
  margin-top: 100rpx;
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  color: #fff;
  background-color: #ffd200;
  border-radius: 92rpx;
}
.sub .tips {
  line-height: 40rpx;
  text-align: center;
  color: #515151;
}