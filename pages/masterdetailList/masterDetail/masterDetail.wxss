/* pages/masterdetailList/masterDetail/masterDetail.wxss */

view {
  display: flex;
}

/* 详情细节列表 */

.detail-contain {
  width: 750rpx;
  flex-direction: column;
  height: 100%;
}

.detail-list {
  width: 750rpx;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  flex-direction: column;
}

.detail-tag {
  width: 660rpx;
  /* height: 60rpx; */
  margin-bottom: 10rpx;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
  background-color: #fff;
}

.detail-l {
  font-size: 30rpx;
  flex: 1;
}

.detail-r {
  flex: 1;
  justify-content: flex-end;
  align-items: center;
}

.detail-money {
  font-size: 35rpx;
  padding-right: 20rpx;
}

.detailYuan {
  display: flex;
  height: 59rpx;
  width: 59rpx;
  line-height: 59rpx;
  border: 1rpx solid #ebebeb;
  font-size: 30rpx;
  color: #a2a2a2;
  justify-content: center;
  align-self: center;
}

/* 联系业主 */

.detail-list-header {
  width: 750rpx;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}

.master-header {
  height: 35rpx;
  width: 35rpx;
  margin-right: 10rpx;
}

.detail-l-tag {
  color: #ffd200;
  align-items: center;
  font-size: 30rpx;
}

.detail-r-tag {
  flex: 2;
  justify-content: flex-end;
  align-items: center;
  font-size: 25rpx;
  margin-right: 20rpx;
}

.detail-money {
  margin-left: 10rpx;
}

/* 说明 */

.detail-title-text {
  display: flex;
  width: 90rpx;
  height: 60rpx;
  color: #fff;
  line-height: 60rpx;
  justify-content: center;
  align-self: center;
  background-color: #ffd200;
}

/* 开工日期 */

.detail-time {
  flex: 1;
  height: 60rpx;
  font-size: 30rpx;
  background-color: #fff;
  align-items: center;
  justify-content: center;
}

.detail-tag-time {
  width: 680rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  justify-content: space-between;
  align-items: center;
}

.detail-word {
  display: flex;
  justify-content: center;
  line-height: 60rpx;
  height: 59rpx;
  width: 59rpx;
  color: #a2a2a2;
  border: 1rpx solid #ebebeb;
}

/* 业主信息 */

.detail-tag-btn {
  width: 660rpx;
  /* height: 150rpx; */
  align-items: flex-start;
  color: #a2a2a2;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  line-height: 170%;
}
.detail-new {
  font-size: 30rpx;
  color: #3c3c3c;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}
/* 维修工页面 */
.detail-tag-r {
  display: flex;
  width: 187rpx;
  height: 60rpx;
  justify-content: center;
  line-height: 60rpx;
  color: #fff;
  background-color: #ffd200;
}

.monety-btn {
  height: 50rpx;
  width: 300rpx;
  margin-top: 45rpx;
}

/* 在执行的上传图片 */
.add-pic-tag {
  width: 750rpx;
  flex-direction: column;
  justify-content: center;
}
.pic-show {
  width: 658rpx;
  height: 398rpx;
  background-color: #e9e9e9;
  align-self: center;
}
.img-item {
  height: 191rpx;
  width: 191rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #e9e9e9;
  margin-left: 55rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  
}
.img-carmera {
  height: 66rpx;
  width: 66rpx;
}

/* 保存图片 */
.sub {
  box-sizing: border-box;
  width: 100%;
  padding: 130rpx 45rpx;
}
.sub button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 90rpx;
  color: #fff;
  background: linear-gradient(to right, #ffd100, #ffd400);
}
.sub button::after {
  border: none;
}