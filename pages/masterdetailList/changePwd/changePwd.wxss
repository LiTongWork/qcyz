/* pages/masterdetailList/masterSet/masterSet.wxss */
/* 全部的view标签都用flex布局 */
view {
  display: flex;
}
/* 订单大厅 */
.master-contain {
  width: 100%;
  height: 298rpx;
  margin-top: 20rpx;
  flex-direction: column;
}

.master-list-tag {
  height: 96rpx;
  width:750rpx;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ebebeb;
  padding-left: 45rpx;
  padding-right: 45rpx;
}

.master-tag {
  height: 98rpx;
  font-size: 30rpx;
  align-items: center;
  padding-left: 45rpx;
}

.master-tag-img {
  height: 43rpx;
  width: 43rpx;
  margin-right: 20rpx;
}

.right-icon {
  height: 23rpx;
  width: 23rpx;
  margin-right: 45rpx
}
.input-text {
  padding-left:30rpx; 
}
/* 底部体现按钮 */

.monety-btn {
  height: 93rpx;
  width: 656rpx;
  background: -webkit-linear-gradient(left, #ffd200, #ffb400);
  background: -o-linear-gradient(left, #ffd200, #ffb400);
  background: -mos-linear-gradient(left, #ffd200, #ffb400);
  background: -moz-linear-gradient(left, #ffd200, #ffb400);
  background: linear-gradient(left, #ffd200, #ffb400);
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  margin-top: 45rpx;
}
.true-btn {
  text-align: center;
  justify-content: center;
  align-self: center;
  font-size: 35rpx;
  color: #fff;
}
