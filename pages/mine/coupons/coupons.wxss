/* pages/mine/coupons/coupons.wxss */
.container {
  padding-top: 10rpx;
}
.list-item {
  position: relative;
  width: 660rpx;
  margin: 25rpx auto 0;
}
.list-item image {
  width: 100%;
}
.list-item .content {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
  width: 380rpx;
  height: 165rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}
.list-item .content view {
  text-align: center;
}
.list-item .content .money {
  margin-right: 6rpx;
  margin-top: 35rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.list-item .content .money text:first-child {
  display: inline-block;
  vertical-align: top;
  height: 100%;
  font-size: 60rpx;
  margin-right: 4px;
}
.list-item .content .requirements {
  height: 46rpx;
  line-height: 46rpx;
  font-size: 26rpx;
}

/* 暂无数据 */
.noData {
  width: 100%;
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}