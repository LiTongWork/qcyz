/* pages/mine/commission/commission.wxss */
.yongjin {
  box-sizing: border-box;
  width: 100%;
  padding: 36rpx 45rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.yongjin view {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}
.yongjin .totalMoney text{
  color: #ffd200;
}
.yongjin .tixian {
  border-radius: 6rpx;
  padding: 0 36rpx;
  text-align: center;
  color: #fff;
  background-color: #ffd200;
}
/* 列表 */
.list {
  width: 100%;
  margin-top: 36rpx;
  background-color: #fff;
}
.list .title {
  padding: 0 45rpx;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.list-item {
  padding: 20rpx 45rpx;
  border-bottom: 1px solid #e9e9e9;
  display: flex;
}
.list-item .headPic {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
}
.list-item .info {
  flex: 1;
  margin-left: 20rpx;
}
.list-item .info view {
  height: 44rpx;
  line-height: 44rpx;
}
.list-item .info text {
  margin-left: 10rpx;
}