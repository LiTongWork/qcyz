/* pages/mine/edit/edit.wxss */
.container {
  /* padding: 50rpx 0; */
  font-size: 30rpx;
}
.list-item {
  /* margin-top: 30rpx; */
  box-sizing: border-box;
  width: 100%;
  padding: 26rpx 45rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e9e9e9;
}
.list-item .item {
  width: auto;
}
.list-item .input {
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  flex: 1;
  padding: 0 50rpx 0 30rpx;
}
.list-item .avatar-input {
  height: 140rpx;
  text-align: right;
}
.list-item .avatar-input image {
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
}
.list-item .input input {
  width: 100%;
  height: 100%;
  min-height: 80rpx;
  text-align: right;
}

/* 保存修改 */
.sub {
  margin-top: 50rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.sub button {
  width: 80%;
  height: 100%;
  color: #fff;
  background-color: #ffd200;
}
.sub button::after {
  border: none;
}