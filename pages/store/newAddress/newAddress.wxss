/* pages/store/newAddress/newAddress.wxss */
.content-list {
  width: 100%;
  margin-top: 26rpx;
  font-size: 30rpx;
}
.list-item {
  width: 660rpx;
  padding: 30rpx 45rpx;
  line-height: 50rpx;
  background-color: #fff;
  border-bottom: 1px solid #e9e9e9;
  display: flex;
  justify-content: space-between;
}
.list-item:last-child {
  border: none;
}
.list-item .item {
  flex: 0 0 150rpx;
  width: 150rpx;
  height: 100%;
}
.list-item .input {
  flex: 1;
  height: 100%;
  align-self: center;
}
.list-item .input input, .list-item .input textarea {
  vertical-align: top;
  width: 100%;
  border: 0;
}
.list-item .input input {
  min-height: 50rpx;
  height: 50rpx;
}
.list-item .input textarea {
  height: 100rpx;
  line-height: 50rpx;
  resize: none;
}
.input .picker text.tips {
  color: #a2a2a2;
}
/* 是否设置为默认地址 */
.default-address {
  width: 660rpx;
  height: 42rpx;
  line-height: 42rpx;
  margin: 0 auto;
  padding: 25rpx 0 50rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.default-address image {
  margin-left: 10rpx;
  width: 42rpx;
}

/* 操作 handle */
.handle {
  box-sizing: border-box;
  width: 100%;
  padding: 50rpx 45rpx;
}
.handle button {
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
}
.handle .save-address {
  color: #fff;
  background: linear-gradient(to right, #ffce00, #ffb302);
}
.handle .del-address {
  margin-top: 25rpx;
  border-color: #a2a2a2;
}