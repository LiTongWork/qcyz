/* pages/store/address/address.wxss */
.container {
  padding-bottom: 100rpx;
}
.list-none {
  font-size: 30rpx;
  color: #a2a2a2;
  margin-top: 40rpx;
}
/* 地址 */
.selected-address {
  width: 100%;
  border-bottom: 1px solid #e9e9e9;
}
.address-list {
  width: 100%;
  margin-top: 26rpx;
}
.address {
  padding: 35rpx 0;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1px solid #e9e9e9;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.address:last-child {
  border: none;
}
.address .icon {
  margin-left: 45rpx;
  flex: 0 0 42rpx;
  width: 42rpx;
}
.address .right {
  margin-right: 45rpx;
  width: 40rpx;
}
.address .text {
  flex: 1;
  padding: 0 15rpx;
  font-size: 30rpx;
}
.address .text .info {
  height: 40rpx;
}
.info text {
  vertical-align: bottom;
  font-size: 26rpx;
}
.info text.name {
  font-weight: bold;
}
.info text.phone {
  margin-left: 15rpx;
  color: #a2a2a2;
  font-size: 24rpx;
}
 .address .text .addContent {
  line-height: 40rpx;
  font-size: 24rpx;
}

/* 新增加地址 */
.newAddress {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 9;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  background: linear-gradient(to right, #ffd000, #ffb302); 
}